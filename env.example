# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# News API Configuration
NEWS_API_KEY=your_news_api_key_here

# ArXiv Configuration
ARXIV_EMAIL=your_email_for_arxiv_api@example.com

# Database Configuration
DATABASE_TYPE=sqlite  # Options: sqlite, tinydb, mongodb
DATABASE_PATH=./data/research_db.sqlite

# Report Configuration
DEFAULT_OUTPUT_FORMAT=markdown  # Options: markdown, pdf
REPORTS_DIR=./reports

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60
REQUEST_DELAY=1.0

# Source Configuration
DEFAULT_SOURCES=arxiv,news,scholarly
MAX_SOURCES_PER_QUERY=10
MAX_ARTICLES_PER_SOURCE=5

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/research_analyst.log 